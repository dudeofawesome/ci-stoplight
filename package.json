{
  "name": "ci-stoplight",
  "version": "0.0.1",
  "description": "CI stoplight using LifX bulbs",
  "main": "build/index.js",
  "engines": {
    "node": ">=6.9.0 <7.0.0"
  },
  "scripts": {
    "start": "if [ \"$BUILD\" = \"true\" ] ;then npm run build; fi; if [ \"$DEPLOY\" = \"true\" ] ;then node .; fi",
    "build": "gulp build",
    "debug": "node --inspect .",
    "lint": "gulp lint",
    "test": "yarn run lint && yarn run test:unit",
    "test:unit": "gulp test"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@types/body-parser": "^0.0.33",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "lifx-http-api": "https://github.com/dudeofawesome/lifx-http-api#patch-1",
    "rxjs": "^5.0.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/chai": "^3.4.34",
    "@types/express": "^4.0.33",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.45",
    "chai": "^3.5.0",
    "del": "^2.2.2",
    "dotenv": "^2.0.0",
    "foreman": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-mocha": "^3.0.1",
    "gulp-nf": "0.0.3",
    "gulp-process-env": "0.0.2",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.1.1",
    "gulp-tslint": "^6.1.2",
    "gulp-typescript": "^3.0.2",
    "mocha": "^3.2.0",
    "pre-commit": "^1.1.3",
    "run-sequence": "^1.2.2",
    "tslint": "^3.15.1",
    "typescript": "^2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dudeofawesome/ci-stoplight.git"
  },
  "license": "GPL-2.0"
}
